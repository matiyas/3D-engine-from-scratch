<Window x:Class="Projekt_LGiM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_LGiM"
        mc:Ignorable="d"
        Title="MainWindow" Height="626" Width="904">
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="RamkaEkran" BorderBrush="#FFA8A8A8" BorderThickness="1" Margin="10,10,0,10">
            <Image x:Name="Ekran" d:IsHidden="True" MouseWheel="Ekran_MouseWheel" MouseDown="Ekran_MouseDown" 
                   MouseMove="Ekran_MouseMove" MouseUp="Ekran_MouseUp"/>
        </Border>
        <Grid x:Name="GridKonrtolki" Grid.Column="1" Margin="0,10,0,0" Height="576" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox x:Name="GroupBoxTranslacja" Header="Translacja" Margin="10,0,10,10">
                <Grid x:Name="GridTranslacja" Margin="0,10,0,-2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="SliderTranslacjaX" Grid.Column="1" VerticalAlignment="Center" Height="22" Margin="5,5,0,9" 
                            Minimum="-100" Maximum="100" ValueChanged="SliderTranslacja_ValueChanged" 
                            Thumb.DragCompleted="Slider_DragCompleted"/>
                    <Slider x:Name="SliderTranslacjaY" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" 
                            VerticalAlignment="Center" Margin="5,8,0,7" Maximum="100" Minimum="-100" 
                            Thumb.DragCompleted="Slider_DragCompleted" ValueChanged="SliderTranslacja_ValueChanged" />
                    <Slider x:Name="SliderTranslacjaZ" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="22" 
                            Margin="5,8,0,7" Maximum="100" Minimum="-100" ValueChanged="SliderTranslacja_ValueChanged"
                            Thumb.DragCompleted="Slider_DragCompleted"/>
                    <Label x:Name="EtykietaTranslacjaX" Content="X" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaTranslacjaY" Content="Y" Grid.Row="1" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaTranslacjaZ" Content="Z" Grid.Row="2" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="GroupBoxRotacja" Header="Rotacja" Margin="10" Grid.Row="1">
                <Grid x:Name="GridRotacja" Margin="0,10,0,-2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="SliderRotacjaX" Grid.Column="1" VerticalAlignment="Center" Height="22" Margin="5,5,0,9"
                            ValueChanged="SliderRotacja_ValueChanged" Thumb.DragCompleted="Slider_DragCompleted"/>
                    <Slider x:Name="SliderRotacjaY" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center"
                            VerticalAlignment="Center" Margin="5,8,0,7" ValueChanged="SliderRotacja_ValueChanged"
                            Thumb.DragCompleted="Slider_DragCompleted"/>
                    <Slider x:Name="SliderRotacjaZ" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="22" 
                            Margin="5,8,0,7" ValueChanged="SliderRotacja_ValueChanged" Thumb.DragCompleted="Slider_DragCompleted"/>
                    <Label x:Name="EtykietaRotacjaX" Content="X" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaRotacjaY" Content="Y" Grid.Row="1" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaRotacjaZ" Content="Z" Grid.Row="2" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="GroupBoxSkalowanie" Header="Skalowanie" Margin="10,10,10,6" Grid.Row="2">
                <Grid x:Name="GridSkalowanie" Margin="0,10,0,-2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="SliderSkalowanieX" Grid.Column="1" VerticalAlignment="Center" Height="22" Margin="5,5,0,9" 
                            Maximum="100" Minimum="-100" Thumb.DragCompleted="Slider_DragCompleted" 
                            ValueChanged="SliderSkalowanie_ValueChanged"/>
                    <Slider x:Name="SliderSkalowanieY" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" 
                            VerticalAlignment="Center" Margin="5,8,0,7" Maximum="100" Minimum="-100" 
                            Thumb.DragCompleted="Slider_DragCompleted" ValueChanged="SliderSkalowanie_ValueChanged"/>
                    <Slider x:Name="SliderSkalowanieZ" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="22" 
                            Margin="5,8,0,7" Maximum="100" Minimum="-100" Thumb.DragCompleted="Slider_DragCompleted"
                            ValueChanged="SliderSkalowanie_ValueChanged"/>
                    <Label x:Name="EtykietaSkalowanieX" Content="X" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaSkalowanieY" Content="Y" Grid.Row="1" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                    <Label x:Name="EtykietaSkalowanieZ" Content="Z" Grid.Row="2" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>
            <CheckBox x:Name="CheckTeksturuj" Content="Teksturowanie" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="3" 
                         VerticalAlignment="Top" Width="210" Click="CheckTeksturuj_Click"/>
            <CheckBox x:Name="CheckSiatka" Content="Siatka" HorizontalAlignment="Left" Margin="10,31,0,0" Grid.Row="3" 
                         VerticalAlignment="Top" Width="210" Click="CheckSiatka_Click" IsChecked="True"/>
        </Grid>

    </Grid>
</Window>
